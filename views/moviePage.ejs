<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/styles/moviePage.css">
    <title><%= title %></title>
</head>

<body>
    <header>
        <nav>
            <ul>
                <li><a href="#"><img src="/uploads/images/logos_footer/home-selected.svg" alt="home"></a>
                    <div class="selected"></div>
                </li>
                <li><a href="#"><img src="/uploads/images/logos_footer/search-gray.svg" alt="search"></a></li>
                <li><a href="#"><img src="/uploads/images/logos_footer/chat-gray.svg" alt="chat"></a></li>
                <li>
                    <a href="#"><img src="/uploads/images/logos_footer/profile-gray.svg" alt="profile"></a>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h1><%= movie.Title %></h1>
            <a href="/" alt=""><img src="/uploads/images/moviePage/pijlwit.png" alt="opgeslagen films bekijken"></a>
            <div class="lijn"></div>
        </section>
        <section>
            <img src="/uploads/images/films/<%= movie.Imgurl %>" alt="<%= movie.Title %>">

            <!-- Begin beoordelingssterren container -->
            <div class="beoordelingssterren" id="beoordelingsSterren">
                <input type="radio" name="beoordeling" id="bs0" checked><label for="bs0"></label>
                <input type="radio" name="beoordeling" id="bs1"><label for="bs1"></label>
                <input type="radio" name="beoordeling" id="bs2"><label for="bs2"></label>
                <input type="radio" name="beoordeling" id="bs3"><label for="bs3"></label>
                <input type="radio" name="beoordeling" id="bs4"><label for="bs4"></label>
                <input type="radio" name="beoordeling" id="bs5"><label for="bs5"></label>
                <!-- Beoordelingsaantal weergeven -->
                <span class="beoordelingsaantal"></span>
            </div>
            <h2>Description</h2>
            <div class="description">
                <p><%= movie.Description.split('\n')[0] %></p>
                <a href="#" class="read-more">Lees meer</a>
                <p class="more-text">
                    <% movie.Description.split('\n').slice(1).forEach((line) => { %>
                    <%= line %><br>
                    <% }) %>
                </p>
                <a href="#" class="read-less" style="display:none;">Lees minder</a>
                <div class="genre-buttons">
                    <!-- Om de genre's van de film te weergeven -->
                    <button class="genre-button"><%= movie.Genre %></button>
                    <!-- Om elke taal uit de data base te laten zien -->
                    <% movie.Language.forEach((language) => { %>
                    <button class="genre-button"><%= language %></button>
                    <% }) %>

                </div>
            </div>

        </section>
        <section>
            <div class="custom-buttons">
                <a href="#" class="button play-movie">
                    <span>PLAY MOVIE</span>
                </a>
                <button class="button add-to-movies" data-id="<%= movie._id.toString() %>">
                    <img src="/uploads/images/home/stertransparant.png" alt="Ster opslaan">
                    <span>ADD TO 'MOVIES YOU LIKE'</span>
                </button>
                

            </div>

        </section>
    </main>
    <script src="/scripts/moviePage.js"></script>
</body>

</html>